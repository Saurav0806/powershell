pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build and Test') {
            steps {
                script {
                    dockerImage = docker.build("docker-image:latest")
                }
                script {
                    sh "docker run -d -p 8070:80 docker-image:latest"
                    }
                }
            
        }

        
    }
}
