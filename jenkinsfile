pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build and Test') {
            steps {
                script {
                    dockerImage = docker.build("docker-image:latest")
                }
                script {
                    def dockerContainer = docker.image('my-docker-image:latest').run('-p 8060:80', '-d')
                    }
                }
            
        }

        stage('Verify') {
            steps {
                script {
                    dockerImage.inside {
                        sh 'curl -fsSL http://65.1.3.238:8080/index.html'
                    }
                }
            }
        }
    }
}
