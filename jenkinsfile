pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build and Test') {
            steps {
                script {
                    dockerImage = docker.build("my-docker-image:latest", "-f Dockerfile .")
                }
                script {
                    def dockerContainer = docker.image('my-docker-image:latest').run('-p 8080:80', '-d')
                    }
                }
            }
        }

        stage('Verify') {
            steps {
                script {
                    dockerImage.inside {
                        sh 'curl -fsSL http://localhost:8080/system_resources.html'
                    }
                }
            }
        }
    }
}
