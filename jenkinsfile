pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build and Test') {
            steps {
                script {
                    dockerImage = docker.build("docker-image:latest")
                }
                script {
                    sh "docker run -d -p 8024:80 docker-image:latest"
                    }
                }
            
        }
      stage('testing container') 
       {
        steps
         {
         script
         {
             sh "curl http:// 65.1.3.238:8024"

        
    }
}
